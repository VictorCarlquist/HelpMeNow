@startuml
	title Entrada no Sistema
	actor Funcionário
	usecase (Realiza\nLogon) as Logon
	usecase (Tela\nPrincipal) as TelaPrincipal <<extend>>
	usecase (Mensagem\nde erro) as Erro <<extend>>
	
	Funcionário --> Logon
	Logon --down-> TelaPrincipal : Sucesso
	Logon --right-> Erro : Falha
	Erro ---> Logon : Tentar novamente
@enduml
